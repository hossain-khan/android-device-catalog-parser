CREATE TABLE device (
  _id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
  brand TEXT NOT NULL,
  device TEXT NOT NULL,
  manufacturer TEXT NOT NULL,
  model_name TEXT NOT NULL,
  ram TEXT NOT NULL,
  form_factor TEXT NOT NULL,
  processor_name TEXT NOT NULL,
  gpu TEXT NOT NULL
);

CREATE INDEX index_device_manufacturer ON device (manufacturer);
CREATE INDEX index_device_model_name ON device (model_name);
CREATE INDEX index_device_brand ON device (brand);
CREATE INDEX index_device_form_factor ON device (form_factor);

CREATE TABLE device_abi (
  device_id INTEGER NOT NULL,
  abi TEXT NOT NULL,
  PRIMARY KEY (device_id, abi),
  FOREIGN KEY (device_id) REFERENCES device (_id) ON DELETE CASCADE ON UPDATE CASCADE
);

CREATE INDEX index_device_abi_device_id ON device_abi (device_id);

CREATE TABLE device_opengl (
  device_id INTEGER NOT NULL,
  opengl_version TEXT NOT NULL,
  PRIMARY KEY (device_id, opengl_version),
  FOREIGN KEY (device_id) REFERENCES device (_id) ON DELETE CASCADE ON UPDATE CASCADE
);

CREATE INDEX index_device_opengl_device_id ON device_opengl (device_id);

CREATE TABLE device_screen_density (
  device_id INTEGER NOT NULL,
  screen_density INTEGER NOT NULL,
  PRIMARY KEY (device_id, screen_density),
  FOREIGN KEY (device_id) REFERENCES device (_id) ON DELETE CASCADE ON UPDATE CASCADE
);

CREATE INDEX index_device_screen_density_device_id ON device_screen_density (device_id);

CREATE TABLE device_screen_size (
  device_id INTEGER NOT NULL,
  screen_size TEXT NOT NULL,
  PRIMARY KEY (device_id, screen_size),
  FOREIGN KEY (device_id) REFERENCES device (_id) ON DELETE CASCADE ON UPDATE CASCADE
);

CREATE INDEX index_device_screen_size_device_id ON device_screen_size (device_id);

CREATE TABLE device_sdk (
  device_id INTEGER NOT NULL,
  sdk_version INTEGER NOT NULL,
  PRIMARY KEY (device_id, sdk_version),
  FOREIGN KEY (device_id) REFERENCES device (_id) ON DELETE CASCADE ON UPDATE CASCADE
);

CREATE INDEX index_device_sdk_device_id ON device_sdk (device_id);

selectAll:
